@{
    ViewBag.Title = "Contact Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-8">
        <h2 class="sub-header">Contact Detail Entry</h2>
        <form class="form-horizontal" role="form">
            <ng-form name="contactmanagerform">
                <div class="form-group">
                    <label class="col-sm-2 control-label">First Name</label>
                    <div class="col-sm-10">
                        <input name="FirstName" class="form-control" type="text" ng-model="contactdetail.FirstName" placeholder="type first Name here"
                                required maxlength="50" />
                        <span style="color:red" ng-show="contactmanagerform.FirstName.$dirty && generalTab.FirstName.$invalid">
                            <span ng-show="contactmanagerform.FirstName.$error.required">First Name is required.</span>
                        </span>

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Last Name</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" ng-model="contactdetail.LastName" placeholder="type last name here" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Email
                    </label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" ng-model="contactdetail.Email"
                               placeholder=" type email here">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        DOB
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="contactdetail.Born"
                               placeholder=" type dob here" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Cell Phone
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="contactdetail.Cellphone"
                               placeholder=" type cell number here">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Is Active
                    </label>
                    <div class="col-sm-1">
                        <input type="checkbox" class="form-control" ng-model="contactdetail.IsActive" ng-checked="contactdetail.IsActive" />

                    </div>


                    <div class="col-sm-10">
                        <button style="float:right; margin:10px;" ng-click="save()" class="btn-primary btn-sm ">Save</button>
                        <button style="float:right; margin:10px;" ng-click="clear()" class="btn-primary btn-sm ">Add</button>
                    </div>
                </div>
            </ng-form>
</form>
    </div>
</div>
     <div class="row">
        <div class="col-md-10">
            <h2 class="sub-header">Contact Details</h2>
            <div>
                <table class="table">                    
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Born</th>
                            <th>Cell Phone</th>
                            <th>Is Active</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="Contact in contactdetaildata">
                        <tr ng-click="update(Contact)">
                            <td>{{Contact.ID}}</td>
                            <td>{{Contact.FirstName}}</td>
                            <td>{{Contact.LastName}}</td>
                            <td>{{Contact.Email}}</td>
                            <td>{{Contact.Born|date:'dd-MM-yyyy'}}</td>
                            <td>{{Contact.Cellphone}}</td>
                            <td><input type="checkbox" ng-model="Contact.IsActive" ng-checked="Contact.IsActive" disabled /></td>
                            <td><button class="btn-warning" ng-click="select(Contact)">Select</button></td>
                            <td><button class="btn-danger" ng-click="delete(Contact)">Delete</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @*ContactDetail
            int ID
            string FirstName
            string LastName
            string Email
            DateTime Born
            string Cellphone
            bool IsActive*@




    </div>

